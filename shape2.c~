#include <stdio.h>

int main()
{
	int a,b,c,d,e,g,n;
	scanf("%d",&n);
	for(a=1;a<=n;a++){
		for(c=1;c<=n-a;c++){
			printf(" ");
		}
		for(b=1;b<=a;b++){
			printf("%d",b);
		}
		for(d=a-1;d>=1;d--){
			printf("%d",d);
		}
		printf("\n");
	}
	for(a=1;a<=n;a++){
		for(c=1;c<=a;c++){
			printf(" ");
		}	
		for(e=1;e<n+1-a;e++){                                                         ++){
			printf("%d",e);	
		}
		for(g=n-a-1;g>=1;g--){
			printf("%d",g);
		}		
		printf("\n");
	}
	
	return 0;
}					
